<div class="row">
  <div class="col s12">
    <h1>Whats new?</h1>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <form action="/posts" method="post">
      <div class="col m8 offset-m2 s12 input-field">
        <label for="title">Title</label>
        <input
          required
          class="validate white-text"
          type="text"
          minlength="3"
          name="title"
          id="title"
        />
      </div>

      <div class="col s12 m8 offset-m2 input-field">
        <textarea
          id="body"
          name="body"
          class="materialize-textarea validate white-text"
          required
          minlength="3"
          maxlength="200"
        ></textarea>
        <label for="body">What's up?</label>
      </div>

      <div class="col s12 m8 offset-m2">
        <button type="submit" class="btn green hoverable">
          <i class="material-icons-round right">send</i>Post
        </button>
      </div>
    </form>
  </div>
</div>
