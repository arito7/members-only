<div class="row">
  <div class="col s12">
    <h1>Login</h1>
  </div>
</div>

<div class="row">
  <div class="col s12 m8 offset-m2">
    <form action="" method="post">
      <div class="col s12 input-field">
        <label for="username">Username</label>
        <input
          required
          class="validate white-text"
          type="text"
          minlength="3"
          name="username"
          id="username"
        />
      </div>

      <div class="col s12 input-field">
        <label for="password">Password</label>
        <input
          required
          minlength="3"
          type="password"
          class="validate white-text"
          name="password"
          id="password"
        />
      </div>
      <div class="col s12">
        <button type="submit" class="btn">Login</button>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <a href="/signup" class="btn">Signup</a>
  </div>
</div>