<header>
  <nav class="blue darken-4">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">WhoWroteDat</a>
      <ul id="nav-mobile" class="left">
        <li>
          <a href="#" data-target="slide-out" class="sidenav-trigger"
            ><i class="material-icons-round">menu</i></a
          >
        </li>
      </ul>
    </div>
  </nav>

  <ul id="slide-out" class="sidenav sidenav-fixed grey darken-4 white-text">
    <li class="black">
      <div class="user-view">
        <div class="background">
          <img src="#" alt="User Profile Image" />
        </div>
      </div>
      <% if (locals.currentUser) { %>
      <a href="/users"><img src="#" alt="" class="circle" /></a>
      <a href="/users"
        ><span class="white-text name"><%= currentUser.full_name %></span></a
      >
      <a href="/users"
        ><span class="white-text email"><%= currentUser.username %></span></a
      >
      <% } %>
    </li>
    <li>
      <a href="/" class="white-text"
        ><i class="material-icons-round white-text">home</i>All Posts</a
      >
    </li>
    <li><div class="divider"></div></li>
    <% if (locals.currentUser) { %>
    <li>
      <a class="white-text" href="/users"
        ><i class="material-icons-round white-text">account_circle</i>My
        Account</a
      >
    </li>
    <li>
      <a class="white-text" href="/posts"
        ><i class="material-icons-round white-text">add_circle_outline</i>Create
        New post</a
      >
    </li>
    <li>
      <a class="white-text" href="/logout"
        ><i class="material-icons-round white-text">logout</i> Logout</a
      >
    </li>
    <% } else { %>
    <li><a href="" class="subheader white-text">Existing Users</a></li>
    <li>
      <a class="white-text" href="/login"
        ><i class="material-icons-round white-text">login</i>Login</a
      >
    </li>
    <li><div class="divider"></div></li>
    <li><a href="" class="subheader white-text">New Users</a></li>
    <li>
      <a class="white-text" href="/signup"
        ><i class="material-icons-round white-text">person_add</i>Signup</a
      >
    </li>
    <% } %>
  </ul>
</header>
