<div class="card grey darken-3 white-text hoverable">
  <div class="card-content" style="padding-bottom: 1rem">
    <div class="card-title"><%= post.title %></div>
    <p><%= post.body %></p>
    <% if (locals.currentUser && currentUser.membershipStatus === 'member') { %>
    <div
      style="
        margin-top: 1rem;
        display: flex;
        justify-content: space-between;
        gap: 0.5rem;
        align-items: center;
      "
    >
      <i class="material-icons-round">perm_identity</i>
      <span class="truncate"> <%= post.creator.full_name %> </span>
      <i class="material-icons-round">watch_later</i>
      <span class="truncate"> <%= post.formatted_date %> </span>
    </div>
    <% } %>
  </div>

  <% if (locals.currentUser) { %>
  <div class="card-action left-align">
    <% if (currentUser.admin) { %>
    <a href="/post/delete/<%= post.id %>" class="red-text">Delete</a>
    <% } %>
  </div>
  <% } %>
</div>
