<div class="row">
  <div class="col s12">
    <h1>Admin Upgrade</h1>
  </div>
</div>

<div class="row">
  <div class="col s12 m8 offset-m2">
    <form action="/users/admin" method="post">
      <div class="col s12 input-field">
        <label for="admin-upgrade-password">Upgrade Code</label>
        <input
          type="password"
          required
          class="white-text"
          id="admin-upgrade-password"
          name="admin-upgrade-password"
        />
      </div>
      <div class="col s12 input-field">
        <button type="submit" class="btn">Become Admin</button>
      </div>
    </form>
  </div>
</div>

