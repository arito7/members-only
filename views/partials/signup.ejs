<div class="row">
  <div class="col s12">
    <h1>Signup Form</h1>
  </div>
</div>

<% if (locals.errors) { %>
<div class="row red darken-4">
  <% errors.forEach(error => { %>
  <div class="col s12">
    <p><%= error.message %></p>
  </div>
  <% }) %>
</div>
<% } %>

<div class="row green darken-4">
  <div class="col s12">
    <p>(*) Denotes a required field.</p>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <form action="" method="post">
      <div class="col s12 input-field">
        <label for="fname">First Name(*)</label>
        <input
          type="text"
          name="fname"
          id="fname"
          value="<%= currentUser ? currentUser.name.first : '' %>"
          required
          minlength="3"
          class="validate white-text"
        />
      </div>

      <div class="col s12 input-field">
        <label for="lname">Family Name(*)</label>
        <input
          type="text"
          name="lname"
          value="<%= currentUser ? currentUser.name.last : '' %>"
          minlength="3"
          id="lname"
          required
          class="validate white-text"
        />
      </div>

      <div class="col m8 offset-m2 s12 input-field">
        <label for="username">Username(*)</label>
        <input
          required
          class="validate white-text"
          type="text"
          value="<%= currentUser ? currentUser.username : '' %>"
          minlength="3"
          name="username"
          id="username"
        />
      </div>

      <div class="col s12 input-field">
        <label for="password">Password(*)</label>
        <input
          required
          minlength="3"
          type="password"
          class="validate white-text"
          name="password"
          id="password"
        />
      </div>

      <div class="col s12 input-field">
        <label for="rpassword">Repeat Password(*)</label>
        <input
          type="password"
          required
          minlength="3"
          class="validate white-text"
          name="rpassword"
          id="rpassword"
        />
      </div>

      <div class="col s12">
        <button class="btn">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col s12 blue darken-4">
    <p>Already a member?</p>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <a href="/login" class="btn">Login</a>
  </div>
</div>
