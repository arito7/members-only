<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>
    <main>
      <div class="container center-align">
        <div class="row">
          <div class="col s12">
            <h1>Login</h1>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <form action="" method="post">
              <div class="col m8 offset-m2 s12 input-field">
                <label for="username">Username</label>
                <input
                  required
                  class="validate"
                  type="text"
                  minlength="3"
                  name="username"
                  id="username"
                />
              </div>

              <div class="col s12 input-field">
                <label for="password">Password</label>
                <input
                  required
                  minlength="3"
                  type="password"
                  class="validate"
                  name="password"
                  id="password"
                />
              </div>
              <div class="col s12">
                <button class="btn">Login</button>
              </div>
            </form>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <a href="/signup" class="btn">Signup</a>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
